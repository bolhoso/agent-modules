	// comment = "Regex of metrics to keep"
}

export "metric_relabelings" {
	value = prometheus.relabel.kubelet_cadvisor
}

prometheus.relabel "kubelet_cadvisor" {
	forward_to = argument.forward_to.value

	rule {
		action        = "keep"
		source_labels = ["__name__"]
		regex         = argument.keep_metrics.value
	}

	// set the job label
	rule {
		action       = "replace"
		replacement  = argument.job_label.value
		target_label = "job"
	}
}
